<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativAdCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="visible"
    tools:ignore="MissingDefaultResource">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/uniform"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_7sdp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ad_body" />

            <TextView
                android:id="@+id/adLabel"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="start|top"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="#F9D034"
                android:elevation="1dp"
                android:gravity="center"
                android:text="Ad"
                android:layout_marginTop="@dimen/_9sdp"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/icon_card"
                app:layout_constraintTop_toBottomOf="@id/ad_headline"
                tools:ignore="SmallSp" />



            <androidx.cardview.widget.CardView
                android:id="@+id/icon_card"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvActionBtnTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_radius_12"
                android:gravity="center"
                android:lines="1"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAllCaps="false"
                android:textColor="@color/subTitle"
                android:textSize="11sp"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/media_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adLabel"
                tools:text="Feel free to explain the rewqrq werq werqw erqwer qerw orld th cds csdcsfsdfsdfsdfsdfssdfsdfsdfsdfssdfsdfsrough with us." />

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLines="2"
                android:textAllCaps="false"
                android:textColor="#408CFF"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/media_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvActionBtnTitle"
                tools:text="Uber Taxi Appd adfasd dfaf" />


            <androidx.cardview.widget.CardView
                android:id="@+id/media_card"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="0dp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActionBtnTitle">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
</FrameLayout>