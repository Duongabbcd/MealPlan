<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_40sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:id="@+id/searchBar"
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="From: "
                style="@style/CustomTextStyleMedium12sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fromValue"
                android:text="@string/start_date"
                style="@style/CustomTextStyle14sp"
                android:textColor="@color/text_display"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:text="To: "
                android:layout_marginStart="@dimen/_10sdp"
                style="@style/CustomTextStyleMedium12sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/toValue"
                android:text="@string/end_date"
                android:textColor="@color/text_display"
                style="@style/CustomTextStyle14sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/resetButton"
                android:contentDescription="@string/imageView"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/icon_reset"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp" />
        </LinearLayout>

    <TextView
        android:id="@+id/selectedStartDate"
        android:visibility="gone"
        style="@style/CustomTextStyleMedium18sp"
        android:textColor="@color/text_display"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/selectedEndDate"
        style="@style/CustomTextStyleMedium18sp"
        android:textColor="@color/text_display"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/selectedStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allDates"
        android:paddingStart="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allItems"
        android:paddingStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_32sdp"
        app:layout_constraintTop_toBottomOf="@id/allDates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>