<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_40sdp"
    android:paddingHorizontal="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomShape20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radius_20_gradient">

            <TextView
                android:id="@+id/mealPicTitle"
                style="@style/CustomTextStyleMedium14sp"
                android:layout_width="match_parent"
                android:text="@string/meal_pic_title"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mealPic"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/scanBtn"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/background_radius_12_white"
                app:layout_constraintTop_toBottomOf="@id/mealPicTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/_120sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/scan"
                android:textColor="@color/text_display"
                style="@style/CustomTextStyleMedium16sp"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/mealPic"
                android:contentDescription="@string/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/meal_pic"
                android:layout_marginBottom="-15dp"
                android:layout_marginEnd="-10dp"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"/>

            <ImageView
                android:contentDescription="@string/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/meal_pic_1"
                android:layout_marginBottom="-21dp"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="@dimen/_120sdp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>