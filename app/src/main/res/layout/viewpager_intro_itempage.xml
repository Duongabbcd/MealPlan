<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    android:textDirection="locale">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomControlLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_8sdp"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imageView"
                android:src="@drawable/intro_pic_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <!-- Bottom Control -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomControlLayout"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/rlNative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            style="@style/CustomTextStyleBold24sp"
            android:gravity="center"
            android:text="@string/intro_1"
            app:layout_constraintBottom_toTopOf="@id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subTitle"
            style="@style/CustomTextStyle14sp"
            android:gravity="center"
            android:text="@string/intro_sub_1"
            app:layout_constraintBottom_toTopOf="@id/introIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/introIcon"
            android:padding="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageView"
            android:src="@drawable/intro_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nextBtn" />

        <TextView
            android:id="@+id/nextBtn"
            style="@style/CustomTextStyleMedium18sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginHorizontal="@dimen/_27sdp"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/secondColor"
            app:layout_constraintTop_toBottomOf="@+id/introIcon"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/bonusPic"
        android:layout_marginTop="@dimen/_24sdp"
        android:contentDescription="@string/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomControlLayout"
        android:src="@drawable/intro_pic_2_bonus"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <!-- Native Ad Frame -->
    <RelativeLayout
        android:id="@+id/rlNative"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include
            android:id="@+id/m_loading_view"
            layout="@layout/native_shimmer_small_screen" />

        <FrameLayout
            android:id="@+id/frNative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!-- Fullscreen Ad Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/frNativeFull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/closeAds"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:contentDescription="@string/imageView"
            android:padding="@dimen/_8sdp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
