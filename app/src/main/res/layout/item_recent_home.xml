<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/background_radius_24">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recentMealImage"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomShape24dp"
        android:src="@drawable/icon_detail_meal"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"/>

    <TextView
        android:id="@+id/recentMealName"
        android:text="Salad"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/recentMealImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CustomTextStyleMedium18sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/recentMealCalory"
        android:text="294Kcal - 100g"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/recentMealImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentMealName"
        style="@style/CustomTextStyle14sp"
        android:textColor="@color/unselected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/recentMealImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_68sdp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_6sdp"
            android:padding="@dimen/_10sdp">

            <FrameLayout
                android:id="@+id/proteinChart"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/progress_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/proteinFill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/vertical_progress_1"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/proteinValue"
                android:text="25g"
                style="@style/CustomTextStyleSemiBold18sp"
                app:layout_constraintTop_toTopOf="@id/proteinChart"
                app:layout_constraintStart_toEndOf="@id/proteinChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/proteinCal"
                android:text="@string/protein"
                android:textColor="@color/unselected"
                style="@style/CustomTextStyleMedium12sp"
                app:layout_constraintTop_toBottomOf="@id/proteinValue"
                app:layout_constraintStart_toEndOf="@id/proteinChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_68sdp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:padding="@dimen/_10sdp">

            <FrameLayout
                android:id="@+id/carbChart"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/progress_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/carbFill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/vertical_progress_2"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/carbValue"
                android:text="25g"
                style="@style/CustomTextStyleSemiBold18sp"
                app:layout_constraintTop_toTopOf="@id/carbChart"
                app:layout_constraintStart_toEndOf="@id/carbChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/carbVal"
                android:text="@string/protein"
                android:textColor="@color/unselected"
                style="@style/CustomTextStyleMedium12sp"
                app:layout_constraintTop_toBottomOf="@id/carbValue"
                app:layout_constraintStart_toEndOf="@id/carbChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_68sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_6sdp"
            android:padding="@dimen/_10sdp">

            <FrameLayout
                android:id="@+id/fatChart"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/progress_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/fatFill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/vertical_progress_3"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/fatValue"
                android:text="25g"
                style="@style/CustomTextStyleSemiBold18sp"
                app:layout_constraintTop_toTopOf="@id/fatChart"
                app:layout_constraintStart_toEndOf="@id/fatChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/fatVal"
                android:text="@string/protein"
                android:textColor="@color/unselected"
                style="@style/CustomTextStyleMedium12sp"
                app:layout_constraintTop_toBottomOf="@id/fatValue"
                app:layout_constraintStart_toEndOf="@id/fatChart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>