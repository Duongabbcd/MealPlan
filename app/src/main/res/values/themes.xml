<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealPlan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textDirection">ltr</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Gradient background -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeLight" parent="Theme.MealPlan" >
        <item name="contentScrim">@color/transparent</item>
        <item name="colorSecondary">@color/secondColor</item>
    </style>


    <style name="circularImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="circularImageView_25dp" parent="">
        <item name="cornerSize">8%</item>
    </style>



